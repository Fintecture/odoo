<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_transaction_form_inherit" model="ir.ui.view">
        <field name="name">Fintecture Transaction Form</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_void']" position="after">
                <button type="object" name="fintecture_refund" states="done"
                        confirm="Are you sure do you want to refund this transaction?"
                        string="Refund" class="oe_highlight"
                />
            </xpath>
        </field>
    </record>
</odoo>
