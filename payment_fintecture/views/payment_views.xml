                    <field name="fintecture_sale_link_qr"/>
                    <field name="fintecture_invoice_viban"/>
                    <field name="fintecture_invoice_link_qr"/>
                    <field name="fintecture_viban_unique_key"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='payment_icon_ids']" position="replace">
                <field widget="many2many_tags" name="payment_icon_ids"
                       attrs="{'invisible': [('provider', '=', 'fintecture')]}"
                />
            </xpath>
